# 环境变量配置
# 复制此文件为 .env 并填入实际值

# ==================== 应用配置 ====================
APP_NAME=Academic Paper Assistant
DEBUG=false
LOG_LEVEL=INFO

# ==================== 服务器配置 ====================
HOST=0.0.0.0
PORT=8000
WORKERS=4
RELOAD=false

# ==================== LLM配置 ====================
# OpenAI API
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_TEMPERATURE=0.3

# ==================== Redis配置 ====================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_TTL=3600

# ==================== 数据库配置 ====================
POSTGRES_URL=postgresql://postgres:password@localhost:5432/academic_db
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password

# ==================== 向量数据库配置 ====================
CHROMA_PERSIST_DIR=./data/vector_db
EMBEDDING_MODEL=text-embedding-3-large

# ==================== 功能开关 ====================
ENABLE_REDIS_CACHE=true
ENABLE_RAG=true
ENABLE_GRAPH_DB=false

# ==================== 外部API (可选) ====================
SEMANTIC_SCHOLAR_API_KEY=
MATHPIX_APP_ID=
MATHPIX_APP_KEY=
